<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	<UseWPF>true</UseWPF>
    <Version>1.0.0</Version>
    <Authors>michael_eddy</Authors>
    <OutputType>Library</OutputType>
    <RepositoryType>git</RepositoryType>
	<UseWindowsForms>True</UseWindowsForms>
    <PackageTags>NetCore,FolderPicker</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>FolderPicker for .NetCore or over .NET 5</Description>
    <RepositoryUrl>https://github.com/dove-team/WpfCore.FolderPicker</RepositoryUrl>
    <PackageProjectUrl>https://github.com/dove-team/WpfCore.FolderPicker</PackageProjectUrl>
    <TargetFrameworks>netcoreapp3.1;net5.0-windows7.0;net6.0-windows7.0</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <None Remove=".gitattributes" />
    <None Remove=".gitignore" />
    <None Remove="LICENSE" />
  </ItemGroup>
</Project>